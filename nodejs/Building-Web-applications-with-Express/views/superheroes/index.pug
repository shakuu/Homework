extends ../_shared/_layout

block content
    ul.list-group#superheroes
      each superhero in result
        li.list-group-item
          div.panel.panel-default
            div.panel-heading
              a(href= "/superheroes/" + superhero._id)
                h2= superhero.name
            div.panel-body
              h3= superhero.secretIdentity           
              img(src= superhero.image width="100px")
              p= superhero.story        