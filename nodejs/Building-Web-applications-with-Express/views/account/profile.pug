extends ../_shared/_layout

block content
  h1 Welcome back #{result.user.username}

  section
    h2 Your display name is #{result.user.displayName}
    form(action="/account/displayName" method="POST")
      input(type="text" name="displayName" placeholder="update your display name")
      button(type="submit") Submit change

    h2 Your image url is #{result.user.image}
    img(src= result.user.image width="200px")
    form(action="/account/image" method="POST")
      input(type="text" name="image" placeholder="update your image url")
      button(type="submit") Submit change

    div.well 
      heading 
        p Favorite Heroes
      ul.list-group
        each hero in result.user.favoriteHeroes
          li.list-group-item
            a(href="/superheroes/" + hero._id)
              p= hero.name
            a.btn.btn-danger(href="/account/remove/hero/" + hero.name) remove
    
    div.well 
      heading 
        p Favorite Fractions
      ul.list-group
        each fraction in result.user.favoriteFractions
          li.list-group-item
            p= fraction.name
            a.btn.btn-danger(href="/account/remove/fraction/" + fraction.name) remove
